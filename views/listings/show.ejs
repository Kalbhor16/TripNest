<% layout("/layouts/biolerplate")%>

    <body>
        <div class="row">
            <div class="col-md-8 offset-3 mt-3">
                <h3>Listing Details</h3>
            </div>
            <div class="col-md-6 offset-3">
                <div class="card">
                    <img src="<%=listing.image%>" class="card-img-top " style="height:15rem" alt="listing_image">
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%=listing.title%>
                            </b> <br>
                            <%=listing.description%> <br>
                                &#8377 <%=Number(listing.price).toLocaleString("en-IN")%> <br>
                                    <%=listing.location%> <br>
                                        <%=listing.country%> <br>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="btns">
            <a href="/listing/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
            <br>
            <form method="post" action="/listing/<%=listing._id%>?_method=DELETE">
                <button class="btn btn-dark offset-4">Delete</button>
            </form>
        </div>
    </body>